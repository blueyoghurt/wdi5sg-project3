<p id="notice"><%= notice %></p>

<h1>Listings</h1>

<div class="table">
<table>
  <thead>
    <tr>
      <th>Company</th>
      <th>Job title</th>
      <th>Industry</th>
      <th>Location</th>
      <th>Hourly Wage</th>
      <th>Start</th>
      <th>End</th>
      <% if current_user %>
      <% if current_user.is_admin %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @listings.each do |listing| %>
    <tr>
      <td><%= link_to listing.bizowner.name, show_business_path(listing.bizowner.id)%></td>
      <td><%= link_to listing.job_title, listing_path(listing) %></td>
      <td><%= listing.industry %></td>
      <td><%= listing.work_location %></td>
      <td><%= listing.wage_per_hour %></td>
      <td><%= listing.job_start_date %></td>
      <td><%= listing.job_end_date %></td>

      <% if current_user %>
      <% if current_user.is_admin %>
      <td><%= link_to 'Show', listing %></td>
      <td><%= link_to 'Edit', edit_listing_path(listing) %></td>
      <td><%= link_to 'Destroy', listing, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      <% end %>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>
<% if current_user %>
<% if current_user.is_biz %>
<%= link_to 'See My Listings', listings_bizowner_path %> |
<%= link_to 'New Listing', new_listing_path %>
<% end %>
<% end %>

</div>
