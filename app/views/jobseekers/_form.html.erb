<%= form_for(@jobseeker, html: { class: "form-horizontal", role: "form" }) do |f| %>
<% if jobseeker.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(jobseeker.errors.count, "error") %> prohibited this jobseeker from being saved:</h2>

  <ul>
    <% jobseeker.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>


<div class="form-group">
  <%= f.label :postal_code, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :postal_code, class: "form-control" %><br/>
  </div>
</div>

<div class="form-group">
  <%= f.label :highest_qualification, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :highest_qualification, class: "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :preferred_area, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :preferred_area, class: "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :preferred_location, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :preferred_location, class: "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :tell_us_about_yourself, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_area :description, class: "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <%= f.label :wage, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.number_field :wage, :step => 0.01, class: "form-control" %><br>
  </div>
</div>


<div class="form-group">
  <%= f.label :date_of_birth, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.date_select :dob, :start_year => 1965, :end_year => 2001, class: "form-control" %><br>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-md-10">
    <br><%= f.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>
