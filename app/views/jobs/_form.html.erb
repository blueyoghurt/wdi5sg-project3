<%= form_for(@job, html: { class: "form-horizontal", role: "form" }) do |f| %>
<% if @job.errors.any? %>
<div class="alert alert-danger alert-dismissable" role="alert">
  <button type="button" class="close" data-dismiss="alert"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
  <h4><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h4>

  <ul>
    <% @job.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="form-group">
  <%= f.label :job_title, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :job_title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :job_description, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_area :job_description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :"Location of Work", class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :industry, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.text_field :industry, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :vacancy, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.number_field :vacancy, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :hourly_wage, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.number_field :wage_per_hour, :step =>0.1 , class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :start_date, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.date_field :job_start_date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :end_date, class: "col-md-2 control-label" %>
  <div class="col-md-10">
    <%= f.date_field :job_end_date, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <div class="col-sm-offset-2 col-md-10">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>
