<div class="form-group">
  <%= f.label :"Recruiter's name", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :name, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :"Location of Work", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :address, class: "form-control" %>
  </div>
</div>
<div class="form-group">
  <%= f.label :"Company", class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :job_title, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :job_title, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :job_description, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :job_description, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :industry, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :industry, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :vacancy, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.number_field :vacancy %>
  </div>
</div>

<div class="form-group">
  <%= f.label :wage_per_hour, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.text_field :wage_per_hour, :step => 0.01 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :job_start_date, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.date_select :job_start_date, :start_year => 2016, :end_year => 2017 %>
  </div>
</div>

<div class="form-group">
  <%= f.label :job_end_date, class: "col-sm-2 control-label" %>
  <div class="col-sm-10">
    <%= f.date_select :job_end_date, :start_year => 2016, :end_year => 2017 %>
  </div>
</div>



<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit class: "btn btn-primary" %>
  </div>
</div>
<% end %>
