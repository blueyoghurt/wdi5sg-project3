<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->

<div class="container">

  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>

  <div class="page-header">
    <h1>Listing jobs</h1>
  </div>

  <%= form_tag jobs_path, :method => 'get', :id => "jobs_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= select_tag "fieldtype", options_for_select([ "name", "address", "title" ], "name") %>
  </p>

  <% end %>

</div>

<div class = "container">

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th><%= sortable "name" %></th>
          <th><%= sortable "address"%></th>
          <th><%= sortable "title"%></th>

          <th colspan=3></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @jobs) do |job| %>
        <td><%= job.name %></td>
        <td><%= job.address %></td>
        <td><%= job.company_name %></td>

        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
    <!-- <%= @jobs = @jobs.paginate(:page => params[:page], :per_page => 5) %> -->
    <br>
    <%= link_to new_job_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    Post a new
    <% end %>
  </div>
</div>
