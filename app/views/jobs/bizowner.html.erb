<div class="container">

  <%= hidden_field_tag :direction, params[:direction] %>
  <%= hidden_field_tag :sort, params[:sort] %>

  <div class="page-header">
    <%= link_to new_job_path, class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-plus"></span>
    New Job
    <% end %>
    <h1>Listing jobs</h1>
  </div>

  <%= form_tag jobs_path, :method => 'get', :id => "jobs_search" do %>
  <p>
    <%= text_field_tag :search, params[:search] %>

    <%= select_tag "fieldtype", options_for_select([ "name", "address", "title" ], "name") %>


  </p>

  <% end %>

</div>

<div class = "container">

  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <!-- Hide Lat and long when render -->
          <!-- <th>Latitude</th> -->
          <!-- <th>Longitude</th> -->
          <th><%= sortable "Recruiter's Name" %></th>
          <th><%= sortable "Location of Work"%></th>
          <th><%= sortable "Company"%></th>
          <th><%= sortable "Job Title"%></th>
          <th><%= sortable "Industry"%></th>
          <th><%= sortable "Wages Per Hour"%></th>
          <th><%= sortable "Start Date"%></th>
          <th><%= sortable "End Date"%></th>

          <th></th>
          <th></th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <%= content_tag_for(:tr, @jobs) do |job| %>
        <!-- Hide Lat and long when render -->
        <!-- <td><%= job.latitude %></td>
        <td><%= job.longitude %></td> -->
        <td><%= job.name %></td>
        <td><%= job.address %></td>
        <td><%= job.title %></td>

        <td><%= link_to 'Show', job %></td>
        <td><%= link_to 'Edit', edit_job_path(job) %></td>
        <td><%= link_to 'Destroy', job, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tbody>
    </table>
    <%= will_paginate @jobs %>

    <br>
    <% if current_user %>
    <% if current_user.is_biz %>
    <%= link_to 'See My Jobs', jobs_bizowner_path %> |
    <% end %>
    <%= link_to 'New Job', new_job_path %>
    <% end %>



  </div>

</div>


<div class = "container">
  <div style='width: 800px;'>
    <div id="map" style='width: 1000px; height: 400px;'></div>
  </div>

  <script type="text/javascript">
  handler = Gmaps.build('Google');
  handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
    markers = handler.addMarkers(<%=raw @map_hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();

    if(navigator.geolocation)
    navigator.geolocation.getCurrentPosition(displayOnMap);
  });

  function displayOnMap(position){
    var marker = handler.addMarker({
      lat: position.coords.latitude,
      lng: position.coords.longitude,
      picture: {
        url: "https://addons.cdn.mozilla.net/img/uploads/addon_icons/13/13028-64.png",
        width:  36,
        height: 36
      },
      infowindow: "Your Current Location!"
    });
    handler.map.centerOn(marker);
  };
  </script>

</div>

<% if current_user.is_biz %>
<%= link_to 'See All Jobs', jobs_path %> |
<% end %>
