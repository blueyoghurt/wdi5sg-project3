<div class="page-header">
  <%= link_to jobs_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-list-alt"></span>
  Back
  <% end %>
  <%= link_to edit_job_path(@job), class: 'btn btn-primary' do %>
  <span class="glyphicon glyphicon-pencil"></span>
  Edit
  <% end %>
  <h1>Show job</h1>
</div>

<dl class="dl-horizontal">
  <!-- Hide Lat and long when render -->
  <!-- <dt>Latitude:</dt>
  <dd><%= @job.latitude %></dd>

  <dt>Longitude:</dt>
  <dd><%= @job.longitude %></dd> -->

  <dt>Name:</dt>
  <dd><%= @job.name %></dd>

  <dt>address:</dt>
  <dd><%= @job.address %></dd>

  <dt>Company Name:</dt>
  <dd><%= @job.company_name %></dd>

  <dt>Job title:</dt>
  <dd><%= @job.job_title %></dd>

  <dt>Job description:</dt>
  <dd>  <%= @job.job_description %></dd>

  <dt>Industry:</dt>
  <dd>  <%= @job.industry %></dd>

  <dt>
    <strong>Status:</strong></dt>
    <dd><% if @job.status == true %>
    <%= "Open "%>
    <% else %>
    <%= "Close "%>
    <% end %>
  </dd>

  <% if current_user.is_biz %>
  <%= link_to 'Edit', edit_job_path(@job) %> |
  <% end %>
  <%= link_to 'Back', jobs_path %>
  <% if current_user.is_seeker %>
  | <%= link_to 'Apply', application_path, method: :post, data: { confirm: 'Are you sure?' } %>
  <% end %>


</dl>
