<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Contact:</strong>
  <%= @user.contact %>
</p>

<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>

<p>
  <strong>User Type:</strong>
  <td><% if @user.is_admin %>
    <%= "Admin"%>
    <% elsif @user.is_seeker %>
    <%= "Job Seeker" %>
    <% else %>
    <%= "Business Owner" %>
    <% end %>
  </td>

</p>

<% if @user.is_seeker %>
<%= link_to 'Show Job Profile', job_profile_path %> |
<%= link_to 'Edit Job Profile', job_edit_path %> |
<% elsif @user.is_biz %>
<%= link_to 'Show Business Profile', business_profile_path %> |
<%= link_to 'Edit Business Profile', business_edit_path %> |
<% end %>
<%= link_to 'Edit User Profile', profile_edit_path %>
